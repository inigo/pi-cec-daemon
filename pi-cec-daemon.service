[Unit]
Description=Pi CEC Daemon - HDMI CEC automation for TV and peripherals
After=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/opt/pi-cec-daemon
ExecStart=/usr/bin/python3 /opt/pi-cec-daemon/cli.py
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=pi-cec-daemon

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
